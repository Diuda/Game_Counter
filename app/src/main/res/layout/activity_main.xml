<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.courtcounter.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:layout_marginTop="16dp"
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="0"
        android:textSize="56sp"
        android:textAlignment="center"
        android:id="@+id/counterA"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 pointer"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:onClick="threeA"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 pointer"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:onClick="twoA"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="free throw"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:onClick="oneA"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
        </LinearLayout>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="0"
            android:textSize="56sp"
            android:textAlignment="center"
            android:id="@+id/counterB"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 pointer"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:onClick="threeB"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 pointer"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:onClick="twoB"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="free throw"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:onClick="oneB"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
    </LinearLayout>


</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:padding="20dp"
        android:onClick="reset"
        android:layout_marginBottom="32dp"/>
    </RelativeLayout>
